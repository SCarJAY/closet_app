    <%= f.label :email, :class => "user-form-label" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, :class => "user-form-label" %><br>
    <%= f.password_field :password, :value => nil %>
  </div>
  <div class="field">
    <%= f.label :city, :class => "user-form-label" %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, :class => "user-form-label" %><br>
    <%= f.text_field :state %>
  </div>
  <div class="actions">
    <%= image_submit_tag "ok-button.png", :id => "ok-button", :class => "cust_button"%>
  </div>
