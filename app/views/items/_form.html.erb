<body class ="closet">
<%= form_for [@user, @item] do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p class="white"><%= f.label :img_url %></p>
    <%= f.text_field :img_url %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :name %></p>
    <%= f.text_field :name %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :category %></p>
    <%= f.select :category, [['top'],['bottom'],['one piece'],['shoes'],['accessory']] %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :color %></p>
    <%= f.text_field :color %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :size %></p>
    <%= f.text_field :size %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :brand %></p>
    <%= f.text_field :brand %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :dress_code %></p>
    <%= f.select :dress_code, [['work'],['school'],['date night'],['night out'],['lounge'],['casual']] %>
  </div>
  <br/>
  <div class="field">
    <p class="white"><%= f.label :purchased_from %></p>
    <%= f.text_field :purchased_from %>
  </div>
  <br/>
  <div class="actions">
    <p class = "black"><%= f.submit %></p>
  </div>
<% end %>
</body>
