<body class ="closet">
<%= form_for [@user, @item] do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, [['top'],['bottom'],['one piece'],['shoes'],['accessory']] %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :dress_code %><br>
    <%= f.select :dress_code, [['work'],['school'],['date night'],['night out'],['lounge'],['casual']] %>
  </div>
  <div class="field">
    <%= f.label :purchased_from %><br>
    <%= f.text_field :purchased_from %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</body>
